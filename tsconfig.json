{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2022",
	"moduleResolution": "Node",
    "outDir": "out",
    "lib": ["ES2022"],
    "sourceMap": true,
    "rootDir": "src",
	"allowSyntheticDefaultImports": true,
    "strict": true,
    "strictNullChecks": false,
  },
  "include": ["src/**/*.ts"],
  "exclude": ["src/test/**/*"]
}
